{
	"name": "alertist",
	"version": "0.3.24",
	"description": "A simple alert management system built on top of the native \"dialog\" HTML tag.",
	"style": "dist/alertist.css",
	"main": "dist/alertist.cjs",
	"module": "dist/alertist.js",
	"unpkg": "./dist/alertist.browser.js",
	"exports": {
		".": {
			"require": "./dist/alertist.cjs",
			"import": "./dist/alertist.js"
		}
	},
	"scripts": {
		"build": "npm-run-all -s build:*",
		"build:check": "eslint",
		"build:test": "pnpm run test",
		"build:js": "rollup -c",
		"build:css": "sass ./src/scss/main.scss ./dist/alertist.css --style=compressed --no-source-map",
		"dev": "npm-run-all -p dev:*",
		"dev:js": "rollup -c rollup.watch.js --watch",
		"dev:css": "sass ./src/scss/main.scss ./dev/alertist.css --watch --embed-source-map",
		"dev:watcher": "node rollup.watch.js --watchloader",
		"patch": "pnpm version patch",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thisjt/alertist.git"
	},
	"author": "thisjt",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thisjt/alertist/issues"
	},
	"homepage": "https://github.com/thisjt/alertist#readme",
	"type": "module",
	"keywords": [
		"alert",
		"alerts",
		"confirm",
		"prompt",
		"toast",
		"browser"
	],
	"devDependencies": {
		"chokidar": "^3.6.0",
		"eslint": "^9.2.0",
		"globals": "^15.1.0",
		"jest": "^29.7.0",
		"jsdom": "^24.0.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^4.17.2",
		"sass": "^1.76.0"
	}
}
