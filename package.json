{
	"name": "alertist",
	"version": "0.0.8",
	"description": "A simple alert management system built on top of the native \"<dialog>\" HTML tag.",
	"style": "dist/alertist.css",
	"main": "dist/alertist.cjs",
	"module": "dist/alertist.js",
	"unpkg": "./dist/alertist_browser.js",
	"exports": {
		".": {
			"require": "./dist/alertist.cjs",
			"import": "./dist/alertist.js"
		}
	},
	"scripts": {
		"build": "npm-run-all -s build:*",
		"build:esm": "rollup ./src/js/main.js --format esm --exports default --name \"alertist\" --file ./dist/alertist.js",
		"build:iife": "rollup ./src/js/main.js --format iife --name \"alertist\" --file ./dist/alertist_browser.js",
		"build:cjs": "rollup ./src/js/main.js --format cjs --file ./dist/alertist.cjs",
		"build:css": "sass ./src/scss/main.scss ./dist/alertist.css --no-source-map",
		"build:push": "git commit -am \"version patch\" && git push",
		"build:patch": "npm version patch",
		"dev": "npm-run-all -p dev:*",
		"dev:js": "rollup ./src/js/main.js --format esm --exports default --name \"alertist\" --file ./dist/alertist.js --watch",
		"dev:css": "sass ./src/css/main.scss ./dist/alertist.css --watch --no-source-map",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thisjt/alertist.git"
	},
	"author": "thisjt",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thisjt/alertist/issues"
	},
	"homepage": "https://github.com/thisjt/alertist#readme",
	"type": "module",
	"keywords": [
		"alert",
		"alerts",
		"confirm",
		"prompt",
		"toast",
		"browser"
	],
	"devDependencies": {
		"eslint": "^9.2.0",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^4.17.2",
		"sass": "^1.76.0"
	}
}
