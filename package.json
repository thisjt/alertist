{
	"name": "alertist",
	"version": "0.4.26",
	"description": "A simple alert management system built on top of the native \"dialog\" HTML tag.",
	"style": "dist/alertist.css",
	"main": "dist/alertist.cjs",
	"module": "dist/alertist.js",
	"unpkg": "./dist/alertist.browser.js",
	"exports": {
		".": {
			"require": "./dist/alertist.cjs",
			"import": "./dist/alertist.js"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"build": "npm-run-all -s test build:*",
		"build:lint": "eslint",
		"build:js": "rollup -c",
		"build:css": "sass ./src/styles/alertist/main.scss ./dist/alertist.css --style=compressed --no-source-map",
		"build:scss": "echo.@import './../src/styles/alertist/main.scss'; > dist/alertist.scss",
		"build:types": "pnpm --package=typescript dlx tsc"
	},
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.4",
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"@types/jsdom": "^21.1.7",
		"@vitest/browser": "^1.6.0",
		"@vitest/coverage-istanbul": "^1.6.0",
		"@vitest/coverage-v8": "^1.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^24.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rollup": "^4.18.0",
		"sass": "^1.77.5",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tsc": "^2.0.4",
		"typescript": "^5.4.5",
		"vite": "^5.0.3",
		"vitest": "^1.6.0",
		"webdriverio": "^8.39.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thisjt/alertist.git"
	},
	"author": "thisjt",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thisjt/alertist/issues"
	},
	"homepage": "https://github.com/thisjt/alertist#readme",
	"keywords": [
		"alert",
		"alerts",
		"confirm",
		"prompt",
		"toast",
		"browser"
	],
	"type": "module"
}
